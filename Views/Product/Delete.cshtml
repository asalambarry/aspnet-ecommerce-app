@model ShopZone.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this product?</h4>
    </div>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">
                        <strong>Price:</strong> $@Model.Price.ToString("F2")<br />
                        <strong>Stock:</strong> @Model.Stock<br />
                        <strong>Category:</strong> @Model.Category?.Name
                    </p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>